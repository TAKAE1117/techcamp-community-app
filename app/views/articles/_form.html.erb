<%= form_with model: article, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :genre_id, "ジャンル" %><br />
    <%# <%= f.text_area :genre_id, class: :form__text, id:"prototype_catch_copy" %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :genre_id, {} ) %>
  </div>

  <div class="field">
    <%= f.label :text, "記事" %><br />
    <%= f.text_area :text, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>