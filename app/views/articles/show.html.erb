<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @article.title %>
      </p>
      <%= link_to "by #{@article.user.nickname}", root_path, class: :prototype__user %>
      <% if current_user == @article.user  %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_article_path(@article.id), class: :prototype__btn %>
          <%= link_to "削除する", article_path(@article.id), method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
     
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">ジャンル</p>
          <p class="detail__message">
            <%= @article.genre.genre_id %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">投稿文</p>
          <p class="detail__message">
            <%= @article.text %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with(model: [@article, @comment], local: true) do |f| %>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %> 
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.text %>
              <%= link_to "（#{comment.user.nickname}）", root_path, class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
