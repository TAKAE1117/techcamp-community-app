<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは
        <%= link_to "#{current_user.nickname}", user_path(current_user), class: :greeting__link%>
        さんがログインしています
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'article', collection: @articles %>
    </div>
  </div>
</main>
