<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード再入力" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickame, "ニックネーム" %><br />
          <%= f.text_field :nickname %>
        </div>

        <div class="field">
          <%= f.label :time_to_attend, "受講期" %><br />
          <%= f.text_area :time_to_attend, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :classroom, "教室" %><br />
          <%= f.text_area :classroom, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :course_style, "受講スタイル" %><br />
          <%= f.text_area :course_style, class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>